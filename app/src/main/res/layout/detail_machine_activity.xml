<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/machineId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="5dp"
        android:text="ID : "
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/machineIdField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:padding="5dp"
        android:text="Machine ID"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/machineId"
        app:layout_constraintStart_toEndOf="@+id/machineId"
        app:layout_constraintTop_toTopOf="@+id/machineId"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/machineTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="Name : "
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/machineId" />

    <TextView
        android:id="@+id/machineTitleField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Machine Name"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/machineTitle"
        app:layout_constraintStart_toEndOf="@+id/machineTitle"
        app:layout_constraintTop_toTopOf="@+id/machineTitle"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/machineType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="Type : "
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/machineTitle" />

    <TextView
        android:id="@+id/machineTypeField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="5dp"
        android:text="Machine Type"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/machineType"
        app:layout_constraintStart_toEndOf="@+id/machineType"
        app:layout_constraintTop_toTopOf="@+id/machineType"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/machineQrNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="QR Code Number : "
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/machineType" />

    <TextView
        android:id="@+id/machineQrNumberField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Machine QR Number"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/machineQrNumber"
        app:layout_constraintStart_toEndOf="@+id/machineQrNumber"
        app:layout_constraintTop_toTopOf="@+id/machineQrNumber"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/machineLastUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="Last Update: "
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/machineQrNumber" />

    <TextView
        android:id="@+id/machineLastUpdateField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Machine Last Update"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/machineLastUpdate"
        app:layout_constraintStart_toEndOf="@+id/machineLastUpdate"
        app:layout_constraintTop_toTopOf="@+id/machineLastUpdate"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="Machine Image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/machineLastUpdateField" />

</androidx.constraintlayout.widget.ConstraintLayout>